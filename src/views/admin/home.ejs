<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang chủ | Bệnh viện Vinmec</title>

    <!-- favicon -->
    <link
      rel="icon"
      type="image/x-icon"
      href="/assets/icon/android-icon-192x192.webp" />

    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jquery -->
    <script
      src="https://code.jquery.com/jquery-3.7.1.js"
      integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
      crossorigin="anonymous"></script>
    <!-- icon -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet" />

    <!-- css -->
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/home.css" />

    <!-- JavaScript  -->
    <script src="/admin/js/main.js" defer></script>
    <script src="/users/js/search.js" defer></script>
  </head>

  <body>
    <%- include("./layout/spinner.ejs") %>
    <div class="row">
      <%- include("./layout/sidebar.ejs") %>
      <div class="colum-content">
        <%- include("./layout/header.ejs") %>
        <div class="colum-title">
          <p>Trang chủ</p>
        </div>
        <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
          <ol class="carousel-indicators">
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="First slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="1"
              aria-label="Second slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="2"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="3"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="4"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="5"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="6"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="7"
              aria-label="Third slide"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img
                src="/assets/content/slide/slide-1.jpg"
                class="w-100 d-block"
                alt="First slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-2.jpg"
                class="w-100 d-block"
                alt="Second slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-3.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-4.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-5.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-6.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-7.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="/assets/content/slide/slide-8.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
          </div>

          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselId"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselId"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </button>
        </div>
        <div class="colum-title">
          <p>Vật tư và thiết bị</p>
        </div>

        <div class="colum-supplies justify-content-between">
          <% listProduct.forEach(function(product){%>
          <div
            class="card"
            data-bs-toggle="modal"
            data-bs-target="#modal-<%= product.id %>">
            <img
              class="card-img-top"
              src="/assets/content/upload/<%= product.image %>"
              alt="ảnh sản phẩm" />
            <div class="card-body">
              <h4 class="card-title"><%= product.name %></h4>
            </div>
            <div class="icon-shopping">
              <i class="bx bxs-shopping-bag"></i>
              <p class="number-vat-tu" data-name="${item.tenVatTu}">
                <%= product.quantity %>
              </p>
            </div>
          </div>

          <%})%>
        </div>
        <%- include("./layout/pagination.ejs") %>
      </div>
    </div>
    <!-- modal hien thi san pham -->
    <% listProduct.forEach(function(product){%>
    <div class="modal fade" id="modal-<%= product.id  %>">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="row">
            <div class="col-sm-6">
              <img
                style="object-fit: cover"
                class="w-100 h-100"
                src="/assets/content/upload/<%= product.image %>"
                alt="" />
            </div>
            <div class="col-sm-6">
              <div
                class="modal-header d-flex justify-content-center align-items-center text-center">
                <h4 class="modal-title w-100"><%= product.name %></h4>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <p>Mô tả</p>
                <p><%= product.description %></p>
                <p>Danh mục</p>
                <p><%= product.category_name%></p>
                <p>Thương hiệu</p>
                <p><%= product.brand %></p>
                <p>Màu</p>
                <p><%= product.color %></p>
                <p>Số lượng</p>
                <p><%= product.quantity %></p>
                <p>Kích thước</p>
                <p><%= product.size %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </body>
</html>
