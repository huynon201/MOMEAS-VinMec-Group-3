<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Bệnh viện Vinmec</title>

    <!-- favicon -->
    <link
      rel="icon"
      type="image/x-icon"
      href="/assets/icon/android-icon-192x192.webp" />

    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- icon -->
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet" />
    <!-- css -->
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/category.css" />
    <style>
      .modal-header {
        display: flex;
        justify-content: center; /* Căn giữa theo chiều ngang */
        position: relative; /* Để đảm bảo nút đóng không bị ảnh hưởng */
      }

      .modal-header .btn-close {
        position: absolute;
        right: 1rem; /* Đặt nút đóng về bên phải */
        top: 50%;
        transform: translateY(-50%);
      }
      .modal-header h5 {
        color: #1dcbdf;
        font-size: 30px;
      }
      .btn-login {
        width: 50%;
      }
    </style>
  </head>

  <body>
    <div class="row">
      <div class="colum-sidebar">
        <nav class="sidebar locked">
          <div class="logo-items flex">
            <span class="nav-image">
              <img
                src="./assets/icon/android-icon-192x192.webp"
                alt="logo_img" />
            </span>
            <span class="logo-name">VINMEC</span>
            <i class="bx bx-lock-alt" id="lock-icon" title="Unlock Sidebar"></i>
            <i class="bx bx-x" id="sidebar-close"></i>
          </div>

          <div class="menu-container">
            <div class="menu-items">
              <ul class="menu-item">
                <div class="menu-title flex">
                  <span class="title">Dashboard</span>
                  <span class="line"></span>
                </div>
                <li class="item active">
                  <a href="#" class="link flex">
                    <i class="bx bxs-home"></i>
                    <span>Trang chủ</span>
                  </a>
                </li>
              </ul>
            </div>
            <div class="sidebar-profile flex">
              <span class="nav-image">
                <img src="/assets/content/upload/<%= avatar %>" alt="" />
              </span>
              <div class="data-text">
                <span class="name">Đăng nhập</span>
                <span class="email"></span>
                <span style="margin-left: 100px" class="icon-out">
                  <a
                    type="button"
                    data-bs-toggle="modal"
                    data-bs-target="#modalId"
                    class="btn btn-outline-primary btn-in">
                    <i style="font-size: 25px" class="bx bx-log-in"></i>
                  </a>
                </span>
              </div>
            </div>
          </div>
        </nav>
      </div>

      <div class="colum-content">
        <nav class="navbar navbar-expand-sm bg-light">
          <div class="container">
            <div class="nav-left">
              <i class="bx bx-menu" id="sidebar-open"></i>
              <a class="navbar-brand" href="#">
                <span class="nav-image">
                  <img src="/assets/content/upload/<%= avatar %>" alt="" />
                </span>
              </a>
              <form class="d-flex search-form">
                <div class="search-box-container">
                  <i class="bx bx-search search-icon"></i>
                  <input
                    class="search-box form-control me-2"
                    type="text"
                    placeholder="Tìm kiếm vật tư và thiết bị" />
                </div>
                <button class="btn btn-outline-info ms-1">Search</button>
              </form>
            </div>
            <!-- <button id="openLogin" class="btn-in btn btn-outline-primary">
              Đăng nhập
            </button> -->
            <button
              type="button"
              class="btn btn-outline-primary btn-in"
              data-bs-toggle="modal"
              data-bs-target="#modalId">
              Đăng nhập
            </button>
          </div>
        </nav>
        <div class="colum-title">
          <p>Trang chủ</p>
        </div>
        <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
          <ol class="carousel-indicators">
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="First slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="1"
              aria-label="Second slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="2"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="3"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="4"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="5"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="6"
              aria-label="Third slide"></li>
            <li
              data-bs-target="#carouselId"
              data-bs-slide-to="7"
              aria-label="Third slide"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img
                src="../Assets/content/slide/slide-1.jpg"
                class="w-100 d-block"
                alt="First slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-2.jpg"
                class="w-100 d-block"
                alt="Second slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-3.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-4.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-5.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-6.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-7.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
            <div class="carousel-item">
              <img
                src="../Assets/content/slide/slide-8.jpg"
                class="w-100 d-block"
                alt="Third slide" />
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselId"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselId"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </button>
        </div>
        <div class="colum-title">
          <p>Vật tư và thiết bị</p>
        </div>
      </div>
    </div>

    <!-- bên ngoài bố cục -->
    <div
      class="modal fade"
      id="modalId"
      tabindex="-1"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      role="dialog"
      aria-labelledby="modalTitleId"
      aria-hidden="true">
      <div
        class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-md"
        role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalTitleId">Đăng nhập</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <form id="loginForm">
            <div class="modal-body">
              <p class="text-danger error-message" id="errorMessage"></p>
              <div class="mb-3">
                <label for="username" class="form-label">Tên đăng nhập</label>
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  id="username"
                  placeholder="Nhập tên đăng nhập"
                  required />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="Nhập mật khẩu"
                  required />
              </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
              <button type="submit" class="btn-login btn btn-primary d-block">
                Đăng nhập
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>

  <script src="/admin/js/main.js"></script>
  <script src="/users/js/login.js"></script>
</html>
